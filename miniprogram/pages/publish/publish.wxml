<scroll-view scroll-x class="bg-blue nav text-center">
  <view class="cu-item {{0==TabCur?'text-white cur':''}}" catchtap="tabSelect" data-id="0">
    <text class="cuIcon-camerafill"></text> 出售
  </view>
  <view class="cu-item {{1==TabCur?'text-white cur':''}}" catchtap="tabSelect" data-id="1">
    <text class="cuIcon-upstagefill"></text> 求购
  </view>
</scroll-view>

<form>
      <view class="cu-form-group margin-top">
        <view class="title">商品名称</view>
        <input name="input"  bindinput="bindInput" value="{{good.title}}" data-type='title'></input>
      </view>
      <view class="cu-form-group">
        <view class="title">{{TabCur==0?"出售价格": "理想价位"}}</view>
        <input name="input"  bindinput="bindInput" value="{{good.curPrice}}" type="digit" data-type='curPrice'></input>
      </view>
      <view class="cu-form-group" wx:if="{{TabCur==0}}">
        <view class="title">原始价格</view>
        <input name="input" bindinput="bindInput" value="{{good.oriPrice}}" type="digit" data-type='oriPrice'></input>
      </view>
      <view class="cu-form-group">
        <text class='cuIcon-locationfill text-orange'></text>
        <view class="title">校区</view>
        <picker bindchange="bindInput" value="{{campusIndex}}" range="{{campus}}" data-type="campus">
          <view class="picker">
            {{campus[campusIndex]}}
          </view>
        </picker>
      </view>
      <view class="cu-form-group">
        <text class='cuIcon-locationfill text-orange'></text>
        <view class="title">类别</view>
        <picker bindchange="bindInput" value="{{categoryIndex}}" range="{{categorys}}" data-type="category">
          <view class="picker">
            {{categorys[categoryIndex]}}
          </view>
        </picker>
      </view>
      <view class="cu-form-group">
        <view class="title">联系方式</view>
        <input name="input" bindinput="bindInput" value="{{good.contact}}" type="digit" data-type='contact'></input>
      </view>
      <view class="cu-form-group margin-top">
        <textarea value='{{good.detail}}' bindinput="bindInput" placeholder="物品描述" data-type='detail'></textarea>
      </view>
      <view class="cu-bar bg-white margin-top">
        <view class="action">
          图片上传
        </view>
        <view class="action">
          {{good.image.length}}/4
        </view>
      </view>
      <view class="cu-form-group">
        <view class="grid col-4 grid-square flex-sub">
          <view class="bg-img" wx:for="{{good.image}}" data-url="{{good.image[index]}}">
           <image src="{{good.image[index]}}" mode="aspectFill"></image>
           <view class="cu-tag bg-red" bindtap="DelImg" data-index="{{index}}">
              <text class='cuIcon-close'></text>
            </view>
          </view>
          <view class="solids" bindtap="ChooseImage" wx:if="good.image.length<4">
            <text class='cuIcon-cameraadd'></text>
          </view>
        </view>
      </view>
      <view class="cu-form-group">
        <button class='cu-btn lines-blue round lg shadow'  disabled="{{good.title == ''|| good.curPrice == -1 || good.contact == '' || buttonLoading ? true : false}}" loading="{{buttonLoading}}" bindtap="bindSubmit">
          立即发布
        </button>
      </view>
</form>

