        </view>
    </view>



      </view>
    </view>

  </view>
</view>


<!-- 图片上传 -->
<view class="title_image" bindtap='bindThingImageInput' >
      <image src="{{thingImage}}" mode="aspectFit" />
</view>


 <!-- 发布按钮 -->
 <button type="primary" size="default" disabled="{{goodtitle == ''|| currentPrice ==''|| PhoneNumber == '' || buttonLoading ? true : false}}" loading="{{buttonLoading}}" bindtap="bindSubmitThing" >
