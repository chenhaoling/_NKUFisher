<!--pages/thing-detail/thing-detail.wxml-->
<!-- <view class="{{theCover? 'coverFadeIn' : 'coverFadeOut'}}"></view> -->




  <!-- 用户头像 -->
  <view class="cu-list menu-avatar">
        <view class="cu-item">
          <view class="cu-avatar round lg" style="background-image:url(https://ossweb-img.qq.com/images/lol/web201310/skin/big10006.jpg);" bindtap="getotheruserinfo"></view>
          <view class="content flex-sub">
            <view>{{otheruser.nickName}}</view>
            <view class="text-gray text-sm flex justify-between">
              {{goodinfo.createTime}}
            </view>
          </view>
        </view>
      </view>

      
<view class='detail'>
  <image src='{{goodinfo.image}}' class='detail-image'>
  </image>
  <view class='detail-sale'>
    <view class='detail-price'>￥{{goodinfo.curPrice}}</view>
    <image src='../movie-detail/1.png' class='detail-selling-price-img'></image>
    <view class='detail-sell'>售价</view>
  </view>
  <view class='detail-cont'>
    <view class='detail-title'>物品：{{goodinfo.title}}</view>
    <view class='detail-poster'>发布者：{{otheruser.nickName}}</view>
    <view class='detail-detail-box'>
    <image class='detail-detail-image' src=''></image>
    </view>
    <view style='color: green'>校区：{{detailData.thingCampus}}</view>
    <view style='color: green'>类别：{{goodinfo.category}}</view>
    <view class='detail-detail'>产品详情：{{goodinfo.detail}}</view>
  </view>






  <!-- 评论 -->
      <view class="cu-list menu-avatar comment solids-top">
        <view class="cu-item"  wx:for = "{{goodinfo.comments}}" wx:key = "{{index}}">
          <view class="cu-avatar round" style="background-image:url(https://ossweb-img.qq.com/images/lol/img/champion/Morgana.png);"></view>
          <view class="content">
            <view>
              <view class="text-grey" style="width:95%">{{goodinfo.comments[index].name}}</view>
              <view wx:if = "{{index == 1}}">
                <text class="cuIcon-roundclosefill lg text-gray"></text>
              </view>
            </view>
            
            <view class="text-gray text-content text-df">
              {{goodinfo.comments[index].content}}
            </view>
            <view class="margin-top-sm flex justify-between">
              <view class="text-gray text-df"> {{goodinfo.comments[index].date}}</view>
              <view>
                <text class="cuIcon-warnfill lg text-gray" ></text>
              </view>
              
            </view>
          </view>
        </view>
      </view>


<view class='ask'>
  <block>

    <input class='input' type='text' placeholder='我来评论' bindinput='contentInp' value='{{contentInp}}' focus='{{focus}}'></input>
    <button class='button' bindtap='addComment'>评论</button>
  </block>
</view>


</view>
