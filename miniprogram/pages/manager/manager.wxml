



<!--miniprogram/pages/manager/manager.wxml-->
<view class='box'>

    <view class="flex-sub text-center">
        <view class="solid-bottom text-lg padding">
            <text class="text-black">管理员</text>
        </view>
    </view>

  <view class='wrapper'>
    <view class="tab-content {{postBook ? 'select' : 'noSelect'}} " bindtap='choosePostBook'>身份验证</view>
    <view class="tab-content {{postThing ? 'select' : 'noSelect'}}" bindtap='choosePostThing'>商品举报</view>
    <view class="tab-content {{postJob ? 'select' : 'noSelect'}}" bindtap='choosePostJob'>评论处理</view>
  </view>
</view>

<!-- 身份验证 -->
<view wx:if="{{postBook}}" class='outside_border'>

  <view class="weui-panel total" wx:for="{{identify}}" wx:key ="{{index}}">
    <view class="title">
      <view class="title_image" >
        <image src="{{identify[index].perImg}}" mode="aspectFit" />
      </view>

      <view class="title_right">
        <view class="weui-cell weui-cell_input">
          <view>
            <view class="weui-label">姓名</view>
          </view>
          <view class="weui-cell__bd">
            <text class="weui-input">{{identify[index].name}}</text>
          </view>
        </view>
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">学院</view>
          </view>
          <view class="weui-cell__bd">
              <text class="weui-input">{{identify[index].college}}</text>
            <!-- <input class="weui-input" placeholder="请输入作者"  value="{{bookAuthor}}" /> -->
          </view>
        </view>
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">学号</view>
          </view>
          <view class="weui-cell__bd">
              <text class="weui-input">{{identify[index].stuId}}</text>
            <!-- <input class="weui-input" placeholder="请输入出版社" value="{{bookPress}}" /> -->
          </view>
        </view>

        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">手机</view>
          </view>
          <view class="weui-cell__bd">
              <text class="weui-input">{{identify[index].phoneNum}}</text>
            <!-- <input class="weui-input" placeholder="请输入出售价格" value="{{currentPrice}}" type="digit" /> -->
          </view>
        </view>

      </view>
    </view>
    <view class="check total" >

         <button class="cu-btn round line-cyan" style=" width:30vw" bindtap="pass">通过</button>
        <button class="cu-btn round line-cyan" style=" width:30vw" bindtap="noPass">不通过</button>

    </view>
    
  </view>   

