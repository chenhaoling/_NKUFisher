<!--miniprogram/pages/perInfo/perInfo.wxml-->

<view wx:if="{{isAut==false}}">
 <button open-type='getUserInfo' bindgetuserinfo='authorization'>点击授权</button>
</view>

<view class="cu-card dynamic" wx:if="{{isAut==true}}">
  <view class="cu-item shadow">
    <view class="cu-list menu-avatar">
      <view class="cu-item">
        <view class="cu-avatar round lg" style="background-image:url({{userInfo.avatar}});"></view>
        <view class="content flex-sub">
        <view class="text-gray">
          <text class="margin-lr">昵称: {{userInfo.nickName}}</text>
          <text class="cu-btn sm round line-green margin-lr"  bindtap="showModal" data-target="ModalPhone">编辑资料</text>
        </view>
          <view class="text-gray">
            <text class="margin-lr" wx:if="{{isReview==true}}">学号: {{userInfo.stuNum}}</text>
            <text class="cu-btn round sm line-red" wx:if="{{isReview==false}}" bindtap="showModal" data-target="Modal">身份验证</text>
          </view>
        </view>
      </view>
    </view>
    <view class="text-grey margin-lr-xs" wx:if="{{isReview==true}}">校区: {{userInfo.campus}}</view>
    <view class="text-grey margin-lr-xs">联系方式: {{userInfo.contact}}</view>
    <view class="text-gray">
      <text class="cuIcon-attentionfill margin-lr-xs"></text><text>关注:{{userInfo.love.length}} </text>
      <text class="cuIcon-attentionfill margin-lr-xs"></text><text> 粉丝:{{userInfo.fans.length}}</text>
    </view>
    
  </view>
</view>


<!-- 绑定的对话框事件 -->
<view class="cu-modal {{modalName=='ModalPhone'?'show':''}}">
  <view class="cu-dialog">
    <view class="cu-bar bg-white justify-end">
      <view class="content">请输入新的手机号</view>
      <view class="action" bindtap="hideModal">
        <!-- <text class="cuIcon-close text-red"></text> -->
        <text class="text-red">确定</text>
      </view>
    </view>
    <view class="padding-xl">
      <!-- Modal 内容。 -->
      <input class="input" name="userName" 
        bindinput="userNameInput"/>
    </view>
  </view>
</view>

<view class="cu-card dynamic" wx:if="{{isAut==true}}">
  <view class="cu-item shadow" wx:for="{{blockCard}}" wx:key ="{{index}}">
    <navigator  url="{{blockCard[index].url}}" class="weui-cell weui-cell_access"  hover-class="weui-cell_active" >
      <view class="weui-cell__bd">{{blockCard[index].tittle}}</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </navigator>
  </view>
</view>

<view class="cu-card dynamic" wx:if="{{isAut==true}}">
  <view class="cu-item shadow">
    <navigator class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view class='text-red' bindtap='bindClear'>退出帐号</view>
    </navigator>
  </view>
</view>

  




